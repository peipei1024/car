<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:background="@color/colorWhite"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/id_oil_text_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="92#汽油"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_price_text_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/id_oil_text_item"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:text="单价:6.79"
            android:textSize="14sp" />

        <Button
            android:id="@+id/id_book_oil_button_item"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/orange_solid_corners"
            android:focusable="false"
            android:text="预约加油"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>
</LinearLayout>