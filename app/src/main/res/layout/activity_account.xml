<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#eeeeee"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite">
        <TextView
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="账号管理"
            android:textColor="@color/colorTextMain"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/id_back_arrow_image"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/icon_black_arrow_left"
            android:layout_alignParentLeft="true"
            android:paddingRight="16dp"
            android:layout_marginLeft="16dp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/id_view_head"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="头像"
                    android:gravity="center"
                    android:textColor="@color/colorTextPrompt"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />
                <ImageView
                    android:id="@+id/id_head_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/head"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="1dp"
                android:id="@+id/id_view_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="昵称"
                    android:textColor="@color/colorTextPrompt"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/id_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:textColor="@color/colorTextMain"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginRight="50dp"
                    android:text="警笛声"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_arrow_black_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="1dp"
                android:id="@+id/id_view_sex"
                android:layout_width="match_parent"
                android:layout_height="50dp"  android:background="@color/colorWhite">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="性别"
                    android:textColor="@color/colorTextPrompt"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />
                <TextView
                    android:id="@+id/id_sex_text"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:textColor="@color/colorTextMain"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:text="男"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_arrow_black_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>



            <RelativeLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" android:background="@color/colorWhite">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="手机号"
                    android:textColor="@color/colorTextPrompt"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/id_text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="12451245"
                    android:textColor="@color/colorTextMain"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="1dp"
                android:id="@+id/id_view_password"
                android:layout_width="match_parent"
                android:layout_height="50dp" android:background="@color/colorWhite">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="修改密码"
                    android:textColor="@color/colorTextPrompt"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_arrow_black_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>