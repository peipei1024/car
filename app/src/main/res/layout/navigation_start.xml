<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorMain">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/go_car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="开车去"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="导航"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/id_back_arrow_image"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingBottom="15dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="15dp"
                android:src="@mipmap/icon_left_arrow" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorMain"
        android:orientation="horizontal"
        android:paddingLeft="23dp"
        android:paddingRight="23dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:text="从"
            android:textColor="#caf0fc"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/start_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:text="我的位置"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/colorMain"
        android:paddingLeft="23dp"
        android:paddingRight="28dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/id_left"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="#caf0fc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@id/id_left"
                android:background="#caf0fc" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/exchange"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_exchange" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorMain"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:paddingTop="5dp"
            android:text="到"
            android:textColor="#caf0fc"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/finish_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="top"
            android:hint="输入终点"
            android:paddingLeft="25dp"
            android:paddingTop="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/navi_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>